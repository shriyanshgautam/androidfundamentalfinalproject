<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/foodimage"
            android:layout_width="72dp"
            android:padding="2dp"
            android:background="@color/grey"
            android:layout_height="72dp" />

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingRight="4dp"
            android:orientation="horizontal"
            android:layout_weight="0.9">
            <TextView
                android:id="@+id/foodname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"

                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textStyle="bold"


                android:text="Paneer Tikka Masala"/>
          <TextView
              android:id="@+id/quantityfood"
              android:layout_width="0dp"
              android:layout_height="36dp"
              android:layout_weight="0.2"
              android:text=""
              android:layout_marginRight="5dp"
              android:textSize="27dp"
              android:textStyle="bold"
              android:gravity="right|center_vertical"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9">
            <TextView
                android:id="@+id/fooddesciption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textSize="10dp"
                android:text="small description of the food item that it diplayed in this list and nothing else"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/foodserves"
                android:layout_width="80dp"

                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:textSize="17dp"
                android:text="2 Serves"/>
            <TextView
                android:id="@+id/foodveg"
                android:layout_width="80dp"

                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/green"
                android:paddingBottom="4dp"
                android:textSize="17dp"
                android:text="NON VEG"/>
            <TextView
                android:id="@+id/foodprice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right|top"
                android:paddingRight="8dp"
                android:textStyle="normal"
                android:textSize="23dp"
                android:text="Rs 125.3"/>

        </LinearLayout>


        </LinearLayout>

</LinearLayout>