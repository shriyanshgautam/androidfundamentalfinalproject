<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shriyansh.foodbasket.OrderDetailActivity$PlaceholderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/ordrtime"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="12:45 PM"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="16dp"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="@color/white"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:background="@color/grey"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/customerimage"
                    android:layout_width="100dp"
                    android:src="@drawable/ic_launcher"
                    android:padding="2dp"
                    android:background="@color/light_grey"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="#"

                        android:textColor="@color/white"
                        android:gravity="right|center_vertical"
                        android:textSize="35dp"/>
                    <TextView
                        android:id="@+id/tablenumber"
                        android:layout_width="wrap_content"
                        android:textSize="37dp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:text="99"
                        android:paddingRight="10dp"
                        android:gravity="center_vertical|left"
                        android:layout_height="match_parent" />

                </LinearLayout>

             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:background="@color/grey"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/customername"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="bottom|center_horizontal"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="8dp"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:text="Shriyansh Gautam"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:paddingBottom="4dp"
                    android:text="\@ these are the comments  that user has written o describe "
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            </LinearLayout>

        <ListView
            android:id="@+id/order_food_list"
            android:layout_width="350dp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            >

        </ListView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"

        android:background="@color/grey"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:textStyle="bold"

            android:text="Total Amount\n(inclusive of teaxes)"/>

        <TextView
            android:id="@+id/totalprice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="right|center_vertical"
            android:textSize="30dp"

            android:text="Rs 200"/>


    </LinearLayout>

</LinearLayout>
